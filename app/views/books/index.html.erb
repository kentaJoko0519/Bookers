<h2>Books</h2>

<% @books.each do |book| %>

  <P>Title</P>
  <span><%= book.title %></span>
  
  <P>Body</P>
  <span><%= book.body %></span>
  
  <span>
    <%= link_to "Show", "/books/#{book.id}" %>
  </span>
  
<% end %>

<h1>New book</h1>
<%= form_with model: @book,url:'/books', metohd: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Body</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book' %>
<% end %>